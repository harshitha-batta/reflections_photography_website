<%- include('layouts/main') %>

<head>
  <link rel="stylesheet" href="/register.css"> <!-- Link to register-specific CSS -->
</head>
<div class="register-container">
  <!-- Left Panel -->
  <div class="left-panel">
    <div class="content">
      <h1>Create And Sell Extraordinary Products</h1>
      <p>Adopt the peace of nature!</p>
      <a href="/auth/login" class="btn">Login</a>
    </div>
  </div>

  <!-- Right Panel -->
  <div class="right-panel">
    <img src="https://cdn.glitch.global/94b02b90-c4c0-4d86-a9ff-d495a773f14b/thumbnails%2FReflections.png?1734121985517" alt="Reflections Logo" class="logo">

    <h2>Let Us Know You!</h2>
    <form action="/auth/register" method="POST">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" placeholder="Enter Your Email" required>
      <label for="username">Username</label>
      <input type="text" id="username" name="name" placeholder="Enter Username" required>
      <label for="password">Password</label>
      <input type="password" id="password" name="password" placeholder="Enter Password" required>
      <button type="submit">Register</button>
    </form>
  </div>
</div>
