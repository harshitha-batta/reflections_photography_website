<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link rel="stylesheet" href="/navbar.css"> <!-- Navbar styles -->
  <link rel="stylesheet" href="/register.css"> <!-- Register page styles -->
</head>
<body>
  <!-- Navbar -->
  <%- include('layouts/main') %>

  <!-- Register Page -->
  <div class="register-page-container">
    <div class="content-panel">
      <h1>Create Your Account</h1>
      <p>Create And Sell Extraordinary Products</p>
      <p>Adopt the peace of nature!</p>
        <form action="/auth/register" method="POST">
          <!-- Email Field -->
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter Your Email" required>

          <!-- Name Field -->
          <label for="name">Name</label> <!-- Match the backend expectation for 'name' -->
          <input type="text" id="name" name="name" placeholder="Enter Your Name" required>

          <!-- Password Field -->
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter Password" required>

          <!-- Submit Button -->
          <button type="submit" class="btn">Register</button>
        </form>
      <a href="/auth/login" class="login-link">Already have an account? Login Here</a>
    </div>
  </div>
    <div class="flash-messages">
  <% if (successMessage) { %>
    <div class="alert alert-success"><%= successMessage %></div>
  <% } %>
  <% if (errorMessage) { %>
    <div class="alert alert-danger"><%= errorMessage %></div>
  <% } %>
</div>

</body>
</html>

