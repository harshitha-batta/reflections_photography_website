<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Navbar</title>
  <link rel="stylesheet" href="navbar.css"> <!-- Link to the CSS file -->
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar">
    <div class="logo">
      <a href="/">Reflections</a>
    </div>
    <ul class="nav-links">
      <li><a href="/">Home</a></li>
      <li class="dropdown">
        <a href="#" class="dropbtn">Categories</a>
        <ul class="dropdown-menu">
          <li><a href="#">Forest</a></li>
          <li><a href="#">Tree</a></li>
          <li><a href="#">Travel</a></li>
          <li><a href="#">Dark</a></li>
          <li><a href="#">Natural</a></li>
          <li><a href="#">Summer</a></li>
          <li><a href="#">HD Wallpapers</a></li>
          <li><a href="#">Beach</a></li>
          <li><a href="#">River</a></li>
          <li><a href="#">Spring</a></li>
        </ul>
      </li>
      <li><a href="/auth/login">Login</a></li>
      <li><a href="/auth/register">Register</a></li>
      <li><a href="/auth/profile">Profile</a></li>
    </ul>
    <div class="hamburger">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </nav>
  <script>
    // Toggle navigation links for mobile view
    const hamburger = document.querySelector('.hamburger');
    const navLinks = document.querySelector('.nav-links');
    hamburger.addEventListener('click', () => {
      navLinks.classList.toggle('active');
    });
  </script>
</body>
</html>
