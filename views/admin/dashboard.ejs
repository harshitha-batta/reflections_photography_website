<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/dashboard.css">
  <link href="https://fonts.googleapis.com/css2?family=Montez&family=Lora:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <%- include('../layouts/main') %>

  <!-- Header -->
  <header>
    <h1>Admin Dashboard</h1>
    <p>Welcome, <%= user.name %> (<%= user.role %>)</p>
  </header>

  <!-- Main Content -->
  <main>
    <!-- Users Section -->
    <section class="section-card">
      <h2>Users</h2>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <% if (user.role === 'admin') { %>
                <span class="admin-badge">Admin</span>
              <% } else { %>
                User
              <% } %>
            </td>
            <td>
              <% if (user.role !== 'admin') { %>
              <form method="POST" action="/admin/user/<%= user._id %>?_method=DELETE">
                <button type="submit" class="remove-btn">Remove</button>
              </form>
              <% } else { %>
              <em>Admin</em>
              <% } %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

    <!-- Photos Section -->
    <section class="section-card">
      <h2>Photos</h2>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Uploader</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% photos.forEach(photo => { %>
          <tr>
            <td><%= photo.title %></td>
            <td><%= photo.uploader %></td>
            <td>
              <form method="POST" action="/admin/photo/<%= photo._id %>?_method=DELETE">
                <button type="submit" class="remove-btn">Remove</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </main>
</body>
</html>
