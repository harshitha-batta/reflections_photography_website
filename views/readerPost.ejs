<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/readerPost.css">
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
  <main>
    <!-- Uploader Section -->
    <section class="uploader">
      <div class="uploader-info">
        <img 
          src="<%= uploader.profilePhoto && uploader.profilePhoto.startsWith('http') ? uploader.profilePhoto : '/profile/photo/' + encodeURIComponent(uploader.profilePhoto || 'default-profile.png') %>" 
          alt="<%= uploader.name %>" 
          class="profile-photo"
        >
        <h2><%= uploader.name %></h2>
      </div>
    </section>

    <!-- Image Section -->
    <section class="image-section">
      <img 
        src="<%= photo.imagePath.startsWith('http') ? photo.imagePath : '/profile/photo/' + encodeURIComponent(photo.imagePath) %>" 
        alt="<%= photo.title %>" 
        class="post-image"
      >
    </section>
      
    <!-- Likes Section -->
    <section class="likes-section">
      <div class="like-box">
        <i class="bi bi-heart-fill"></i> <!-- Heart icon from Bootstrap -->
        <span>Like <%= photo.likes.length %></span>
      </div>
    </section>
  </main>
</body>
</html>
