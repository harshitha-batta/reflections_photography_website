<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/readerPost.css">
  <title><%= title %></title>
    <link rel="stylesheet" href="/navbar.css">
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
  <%- include('./layouts/main', { title: 'Your Profile' }) %>
  <main>
    <!-- Uploader Section -->
    <section class="uploader">
      <div class="uploader-info">
        <img 
          src="<%= uploader.profilePhoto && uploader.profilePhoto.startsWith('http') ? uploader.profilePhoto : '/profile/photo/' + encodeURIComponent(uploader.profilePhoto || 'default-profile.png') %>" 
          alt="<%= uploader.name %>" 
          class="profile-photo"
        >
        <h2><%= uploader.name %></h2>
      </div>
    </section>

    <!-- Image Section -->
    <section class="image-section">
      <img 
        src="<%= photo.imagePath.startsWith('http') ? photo.imagePath : '/profile/photo/' + encodeURIComponent(photo.imagePath) %>" 
        alt="<%= photo.title %>" 
        class="post-image"
      >
    </section>
      
    <!-- Likes Section -->
    <section class="likes-section">
      <div class="like-box">
        <i class="bi bi-heart-fill"></i> <!-- Heart icon from Bootstrap -->
        <span>Like <%= photo.likes.length %></span>
      </div>
    </section>
            
     <!-- Uploader Section -->
    <section class="uploader">
      <div class="uploader-info">
        <a href="/user/<%= uploader._id %>">
          <img 
            src="<%= uploader.profilePhoto && uploader.profilePhoto.startsWith('http') 
                   ? uploader.profilePhoto 
                   : '/profile/photo/' + encodeURIComponent(uploader.profilePhoto || 'default-profile.png') %>" 
            alt="<%= uploader.name %>" 
            class="profile-photo"
          >
        </a>
        <a href="/user/<%= uploader._id %>">
          <h2><%= uploader.name %></h2>
        </a>
      </div>
    </section>
      
      <!-- Comments Section -->
      <section class="comments-section">
        <h3>Comments</h3>

          <!-- Display existing comments -->
          <ul class="comments-list">
            <% photo.comments.forEach(comment => { %>
              <li class="comment-item">
                <strong><%= comment.authorName %></strong>: <%= comment.text %>
              </li>
            <% }) %>
          </ul>

          <!-- Add Comment Form - Only show if user is authenticated -->
          <% if (user) { %>
            <form id="comment-form" method="POST" action="/comments/<%= photo._id %>">
              <textarea name="text" id="comment-text" placeholder="Add a comment..." required></textarea>
              <button type="submit">Post Comment</button>
            </form>
          <% } else { %>
            <p>Please Log in</a> or Register</a> to add a comment.</p>
          <% } %>
        </section>

      
  </main>
</body>
</html>
