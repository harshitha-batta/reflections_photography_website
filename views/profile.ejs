<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Profile</title>
  <link rel="stylesheet" href="/navbar.css">
  <link rel="stylesheet" href="/profile.css">
  <link href="https://fonts.googleapis.com/css2?family=Montez&family=Lora:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
  <!-- Include Navbar -->
  <%- include('./layouts/main', { title: 'Your Profile' }) %>

  <div class="profile-container">
    <!-- Flash Messages -->
    <div class="flash-messages">
      <% if (successMessage) { %>
        <div class="alert success"><%= successMessage %></div>
      <% } %>
      <% if (errorMessage) { %>
        <div class="alert error"><%= errorMessage %></div>
      <% } %>
    </div>

    <!-- Profile Header -->
    <div class="profile-header">
      <div class="profile-photo-container">
        <% if (user.profilePhoto) { %>
          <img src="/profile/profile-photo/<%= encodeURIComponent(user.profilePhoto) %>" alt="Profile Photo" class="profile-photo" />
        <% } else { %>
          <div class="no-photo">No profile photo uploaded yet.</div>
        <% } %>
        <button class="btn" onclick="toggleForm('profilePhotoForm')">Change Photo</button>
        <form id="profilePhotoForm" action="/profile/upload-profile-photo" method="POST" enctype="multipart/form-data" class="hidden">
          <input type="file" name="profilePhoto" id="profilePhoto" required />
          <button type="submit" class="btn">Upload</button>
        </form>
      </div>

      <div class="profile-info">
        <h1><%= user.name %></h1>
        <p class="bio"><%= user.bio || 'No bio yet. Add one below!' %></p>
        <button class="btn" onclick="toggleForm('bioForm')">Edit Bio</button>
        <form id="bioForm" action="/profile/update-bio" method="POST" class="hidden">
          <textarea name="bio" id="bio" placeholder="Write something about yourself..."><%= user.bio || '' %></textarea>
          <button type="submit" class="btn">Save</button>
        </form>
      </div>
    </div>

    <!-- Uploaded Photos Section -->
    <div class="uploaded-photos-section">
      <h2>Your Photos</h2>
      <% if (photos && photos.length > 0) { %>
        <div class="photos-grid">
          <% photos.forEach(photo => { %>
            <div class="photo-card">
              <img src="/profile/photo/<%= photo.imagePath %>" alt="<%= photo.title %>" />
              <p class="photo-title"><%= photo.title %></p>
              <p class="photo-description"><%= photo.description || 'No description provided' %></p>
              <p class="photo-category"><strong>Category:</strong> <%= photo.category %></p>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p>No photos uploaded yet.</p>
      <% } %>
      <button class="btn" onclick="toggleForm('uploadPhotoForm')">Upload Photo</button>
      <form id="uploadPhotoForm" action="/profile/upload-photo" method="POST" enctype="multipart/form-data" class="hidden">
        <input type="text" name="title" placeholder="Photo Title" required />
        <textarea name="description" placeholder="Photo Description"></textarea>
        <select name="category" required>
          <option value="Landscapes">Landscapes</option>
          <option value="Portraits">Portraits</option>
          <option value="Abstract">Abstract</option>
          <option value="Other">Other</option>
        </select>
        <input type="file" name="photo" id="photoUpload" required />
        <button type="submit" class="btn">Upload</button>
      </form>
    </div>
  </div>

  <!-- Logout -->
  <div class="logout">
    <a href="/auth/logout" class="btn logout-btn">Logout</a>
  </div>

  <!-- JavaScript -->
  <script>
    function toggleForm(formId) {
      const form = document.getElementById(formId);
      form.classList.toggle('hidden');
    }
  </script>
</body>
</html>
