<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Profile</title>
  <link rel="stylesheet" href="/profile.css">
  <link rel="stylesheet" href="/navbar.css">
</head>
<body>
  <!-- Background Image -->
  <div class="background-container">
    <%- include('./layouts/main', { title: 'Your Profile' }) %>

    <!-- Transparent Profile Box -->
    <div class="profile-container">
      <!-- Profile Header -->
      <div class="profile-header">
        <div class="profile-photo-container">
          <img src="<%= user.profilePhoto ? '/profile/profile-photo/' + encodeURIComponent(user.profilePhoto) : '/default-profile.png' %>" 
               alt="Profile Photo" class="profile-photo">
        </div>
        <div class="profile-info">
          <h1 class="profile-name">Hello! <%= user.name %></h1>
          <p><%= user.bio || 'No bio added yet!' %></p>
          <button class="edit-profile-btn" onclick="openModal()">✏️ Edit Profile</button>
        </div>
      </div>

      <!-- Uploaded Photos Section -->
      <div class="uploaded-photos-section">
        <h2>Your Photos</h2>
        <% if (photos.length > 0) { %>
          <div class="photos-grid">
            <% photos.forEach(photo => { %>
              <div class="photo-card">
                <img src="/profile/photo/<%= photo.imagePath %>" alt="<%= photo.title %>">
                <p><strong><%= photo.title %></strong></p>
                <p class="photo-description"><%= photo.description || 'No description provided.' %></p>
                <p class="photo-category"><strong>Category:</strong> <%= photo.category %></p>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="no-photos-message">You haven't uploaded any photos yet.</p>
        <% } %>

        <!-- Upload New Photo Form -->
        <div class="upload-section">
          <h3>Upload New Photo</h3>
          <form action="/profile/upload-photo" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" id="title" name="title" required>
            </div>
            <div class="form-group">
              <label for="description">Description</label>
              <textarea id="description" name="description" rows="3"></textarea>
            </div>
            <div class="form-group">
              <label for="category">Category</label>
              <select id="category" name="category">
                <option value="Landscapes">Landscapes</option>
                <option value="Portraits">Portraits</option>
                <option value="Abstract">Abstract</option>
                <option value="Other">Other</option>
              </select>
            </div>
            <div class="form-group">
              <label for="photo">Photo</label>
              <input type="file" id="photo" name="photo" required>
            </div>
            <button type="submit" class="upload-btn">Upload</button>
          </form>
        </div>
      </div>

      <!-- Logout Button -->
      <div class="logout">
        <a href="/auth/logout" class="logout-btn">Logout</a>
      </div>
    </div>
  </div>

  <!-- Modal for Editing Profile -->
  <div id="modal" class="modal hidden">
    <div class="modal-content">
      <span class="close-btn" onclick="closeModal()">×</span>
      <h2>Edit Profile</h2>
      
      <!-- Change Profile Photo -->
      <form action="/profile/upload-profile-photo" method="POST" enctype="multipart/form-data">
        <label for="profilePhoto">Change Photo:</label>
        <input type="file" id="profilePhoto" name="profilePhoto" required>
        <button type="submit" class="btn">Upload Photo</button>
      </form>

      <!-- Edit Bio -->
      <form action="/profile/update-bio" method="POST">
        <label for="bio">Edit Bio:</label>
        <textarea id="bio" name="bio" placeholder="Write a short bio..."><%= user.bio || '' %></textarea>
        <button type="submit" class="btn">Save Bio</button>
      </form>
    </div>
  </div>

  <!-- JavaScript for Modal -->
  <script>
    function openModal() {
      document.getElementById('modal').classList.remove('hidden');
    }

    function closeModal() {
      document.getElementById('modal').classList.add('hidden');
    }
  </script>
</body>
</html>
