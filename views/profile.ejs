<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Profile</title>
  <link rel="stylesheet" href="/profile.css">
  <link rel="stylesheet" href="/navbar.css">
</head>

<body>
  <%- include('./layouts/main', { title: 'Your Profile' }) %>

  <div class="profile-container">
    <!-- Profile Header -->
    <div class="profile-header">
      <div class="profile-photo-container">
          <% if (user.profilePhoto) { %>
          <img src="/profile/profile-photo/<%= encodeURIComponent(user.profilePhoto) %>" alt="Profile Photo" class="profile-photo" />
        <% } else { %>
          <p class="no-photo">No profile photo uploaded yet.</p>
        <% } %>

        <form action="/profile/upload-profile-photo" method="POST" enctype="multipart/form-data" class="upload-photo-form">
          <label for="profilePhoto">Change Profile Photo:</label>
          <input type="file" name="profilePhoto" id="profilePhoto" required />
          <button type="submit" class="btn">Upload</button>
        </form>
      </div>
      <div class="profile-info">
        <h1><%= user.firstName || user.name %> <%= user.lastName || '' %></h1>
        <p><%= user.bio || 'No bio yet. Add one below!' %></p>
        <form action="/profile/update-bio" method="POST" class="edit-bio-form">
          <textarea id="bio" name="bio" placeholder="Write a short bio..."><%= user.bio || '' %></textarea>
          <button type="submit" class="btn">Save Bio</button>
        </form>
      </div>
    </div>

    <!-- Uploaded Photos Section -->
<div class="uploaded-photos-section">
  <h2>Your Photos</h2>
  <% if (photos && photos.length > 0) { %>
    <div class="photos-grid">
      <% photos.forEach(photo => { %>
        <div class="photo-card">
          <img src="/profile/photo/<%= encodeURIComponent(photo.imagePath) %>" alt="<%= photo.title %>" class="uploaded-photo" />
          <h3><%= photo.title %></h3>
          <p><%= photo.description %></p>
          <p><strong>Category:</strong> <%= photo.category %></p>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p>No photos uploaded yet.</p>
  <% } %>
</div>


    <div class="logout">
      <a href="/auth/logout" class="btn">Logout</a>
    </div>
  </div>
</body>
</html>
