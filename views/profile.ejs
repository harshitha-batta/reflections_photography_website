<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Profile</title>
  <link rel="stylesheet" href="/profile.css">
  <link rel="stylesheet" href="/navbar.css">
</head>
<body>
  <%- include('./layouts/main', { title: 'Your Profile' }) %>

  <div class="profile-container">
    <!-- Profile Header -->
    <div class="profile-header">
      <div class="profile-photo-container">
        <img src="<%= user.profilePhoto ? '/profile/profile-photo/' + encodeURIComponent(user.profilePhoto) : '/default-profile.png' %>" 
             alt="Profile Photo" class="profile-photo">
        <button class="btn" onclick="toggleModal('photoModal')">Change Photo</button>
      </div>
      <div class="profile-info">
        <h1><%= user.name %></h1>
        <p><%= user.bio || 'Add a bio to introduce yourself!' %></p>
        <button class="btn" onclick="toggleModal('bioModal')">Edit Bio</button>
      </div>
    </div>

    <!-- Uploaded Photos Section -->
    <div class="uploaded-photos-section">
      <h2>Your Photos</h2>
      <% if (photos.length > 0) { %>
        <div class="photos-grid">
          <% photos.forEach(photo => { %>
            <div class="photo-card">
              <img src="/profile/photo/<%= photo.imagePath %>" alt="<%= photo.title %>">
              <p><strong><%= photo.title %></strong></p>
              <p><%= photo.description %></p>
              <p><strong>Category:</strong> <%= photo.category %></p>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="no-photos-text">No photos uploaded yet.</p>
      <% } %>
      <button class="btn" onclick="toggleModal('uploadModal')">Upload New Photo</button>
    </div>

    <!-- Logout Section -->
    <div class="logout">
      <a href="/auth/logout" class="btn logout-btn">Logout</a>
    </div>
  </div>

  <!-- Modals -->
  <div id="bioModal" class="modal hidden">
    <div class="modal-content">
      <h2>Edit Bio</h2>
      <form action="/profile/update-bio" method="POST">
        <textarea name="bio" placeholder="Write a short bio..."><%= user.bio || '' %></textarea>
        <button type="submit" class="btn">Save</button>
        <button type="button" class="btn close-btn" onclick="toggleModal('bioModal')">Cancel</button>
      </form>
    </div>
  </div>

  <div id="photoModal" class="modal hidden">
    <div class="modal-content">
      <h2>Change Profile Photo</h2>
      <form action="/profile/upload-profile-photo" method="POST" enctype="multipart/form-data">
        <input type="file" name="profilePhoto" required>
        <button type="submit" class="btn">Upload</button>
        <button type="button" class="btn close-btn" onclick="toggleModal('photoModal')">Cancel</button>
      </form>
    </div>
  </div>

  <div id="uploadModal" class="modal hidden">
    <div class="modal-content">
      <h2>Upload New Photo</h2>
      <form action="/profile/upload-photo" method="POST" enctype="multipart/form-data">
        <label for="title">Title</label>
        <input type="text" name="title" required>
        <label for="description">Description</label>
        <textarea name="description"></textarea>
        <label for="category">Category</label>
        <select name="category">
          <option value="Landscapes">Landscapes</option>
          <option value="Portraits">Portraits</option>
          <option value="Abstract">Abstract</option>
          <option value="Other">Other</option>
        </select>
        <label for="photo">Photo</label>
        <input type="file" name="photo" required>
        <button type="submit" class="btn">Upload</button>
        <button type="button" class="btn close-btn" onclick="toggleModal('uploadModal')">Cancel</button>
      </form>
    </div>
  </div>

  <script>
    function toggleModal(modalId) {
      const modal = document.getElementById(modalId);
      modal.classList.toggle('hidden');
    }
  </script>
</body>
</html>
